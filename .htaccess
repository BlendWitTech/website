# Blendwit Website - Apache Configuration
# Redirect old pages and handle 404 errors

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Force HTTPS (uncomment if you have SSL certificate)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirect old listing pages to 404
    RewriteRule ^listings(/.*)?$ /404.html [R=404,L]
    RewriteRule ^listing(/.*)?$ /404.html [R=404,L]
    RewriteRule ^e-commerce.*$ /404.html [R=404,L]
    RewriteRule ^ecommerce.*$ /404.html [R=404,L]

    # Redirect old SEO analyst page to 404
    RewriteRule ^seo-analyst/?$ /404.html [R=404,L]
    RewriteRule ^seo/?$ /404.html [R=404,L]
    RewriteRule ^analyst/?$ /404.html [R=404,L]

    # Redirect old career pages to 404
    RewriteRule ^careers/?$ /404.html [R=404,L]
    RewriteRule ^career/?$ /404.html [R=404,L]
    RewriteRule ^jobs/?$ /404.html [R=404,L]
    RewriteRule ^job/?$ /404.html [R=404,L]

    # Redirect old service pages to 404
    RewriteRule ^services/.*$ /404.html [R=404,L]
    RewriteRule ^service/.*$ /404.html [R=404,L]

    # Redirect old about pages to 404
    RewriteRule ^about/?$ /404.html [R=404,L]
    RewriteRule ^about-us/?$ /404.html [R=404,L]
    RewriteRule ^aboutus/?$ /404.html [R=404,L]

    # Redirect old contact pages to 404
    RewriteRule ^contact/?$ /404.html [R=404,L]
    RewriteRule ^contact-us/?$ /404.html [R=404,L]
    RewriteRule ^contactus/?$ /404.html [R=404,L]

    # Redirect old portfolio/work pages to 404
    RewriteRule ^portfolio/?$ /404.html [R=404,L]
    RewriteRule ^work/?$ /404.html [R=404,L]
    RewriteRule ^projects/?$ /404.html [R=404,L]
    RewriteRule ^project/?$ /404.html [R=404,L]
    RewriteRule ^our-work/?$ /404.html [R=404,L]
    RewriteRule ^ourwork/?$ /404.html [R=404,L]

    # Redirect old testimonial pages to 404
    RewriteRule ^testimonials/?$ /404.html [R=404,L]
    RewriteRule ^testimonial/?$ /404.html [R=404,L]
    RewriteRule ^reviews/?$ /404.html [R=404,L]
    RewriteRule ^review/?$ /404.html [R=404,L]

    # Redirect old blog/news pages to 404
    RewriteRule ^blog(/.*)?$ /404.html [R=404,L]
    RewriteRule ^news(/.*)?$ /404.html [R=404,L]
    RewriteRule ^article(/.*)?$ /404.html [R=404,L]
    RewriteRule ^post(/.*)?$ /404.html [R=404,L]

    # Show 404 for any other pages that don't exist
    # Only allow: index.html, privacy-policy.html, terms-of-service.html, assets folder
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/$ [NC]
    RewriteCond %{REQUEST_URI} !^/index\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/privacy-policy\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/terms-of-service\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/404\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/assets/ [NC]
    RewriteCond %{REQUEST_URI} !^/\.well-known/ [NC]
    RewriteCond %{REQUEST_URI} !^/robots\.txt$ [NC]
    RewriteCond %{REQUEST_URI} !^/sitemap\.xml$ [NC]
    RewriteRule ^(.*)$ /404.html [R=404,L]

    # Handle 404 errors
    ErrorDocument 404 /404.html
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Prevent directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|yml)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

