# Blendwit Website - Apache Configuration
# Redirect old pages and handle 404 errors

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Force HTTPS (uncomment if you have SSL certificate)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirect old listing pages to homepage
    RewriteRule ^listings/.*$ / [R=301,L]
    RewriteRule ^listings$ / [R=301,L]

    # Redirect old SEO analyst page
    RewriteRule ^seo-analyst/?$ /#services [R=301,L]

    # Redirect old career pages
    RewriteRule ^careers/?$ /#about [R=301,L]
    RewriteRule ^career/?$ /#about [R=301,L]

    # Redirect old service pages to services section
    RewriteRule ^services/.*$ /#services [R=301,L]
    RewriteRule ^service/.*$ /#services [R=301,L]

    # Redirect old about pages
    RewriteRule ^about/?$ /#about [R=301,L]
    RewriteRule ^about-us/?$ /#about [R=301,L]

    # Redirect old contact pages
    RewriteRule ^contact/?$ /#contact [R=301,L]
    RewriteRule ^contact-us/?$ /#contact [R=301,L]

    # Redirect old portfolio/work pages
    RewriteRule ^portfolio/?$ /#portfolio [R=301,L]
    RewriteRule ^work/?$ /#portfolio [R=301,L]
    RewriteRule ^projects/?$ /#portfolio [R=301,L]

    # Redirect old testimonial pages
    RewriteRule ^testimonials/?$ /#testimonials [R=301,L]
    RewriteRule ^reviews/?$ /#testimonials [R=301,L]

    # Redirect old blog/news pages to homepage (if blog doesn't exist)
    RewriteRule ^blog/.*$ / [R=301,L]
    RewriteRule ^news/.*$ / [R=301,L]

    # Handle 404 errors
    ErrorDocument 404 /404.html
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Prevent directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|yml)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

