# Blendwit Website - Apache Configuration
# Redirect old pages and handle 404 errors

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Force HTTPS (uncomment if you have SSL certificate)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Redirect old listing pages to homepage (catch all variations)
    RewriteRule ^listings(/.*)?$ / [R=301,L]
    RewriteRule ^listing(/.*)?$ / [R=301,L]
    RewriteRule ^e-commerce.*$ / [R=301,L]
    RewriteRule ^ecommerce.*$ / [R=301,L]

    # Redirect old SEO analyst page to services
    RewriteRule ^seo-analyst/?$ / [R=301,L]
    RewriteRule ^seo/?$ / [R=301,L]
    RewriteRule ^analyst/?$ / [R=301,L]

    # Redirect old career pages to homepage
    RewriteRule ^careers/?$ / [R=301,L]
    RewriteRule ^career/?$ / [R=301,L]
    RewriteRule ^jobs/?$ / [R=301,L]
    RewriteRule ^job/?$ / [R=301,L]

    # Redirect old service pages to homepage (services are on homepage)
    RewriteRule ^services/.*$ / [R=301,L]
    RewriteRule ^service/.*$ / [R=301,L]

    # Redirect old about pages to homepage (about is on homepage)
    RewriteRule ^about/?$ / [R=301,L]
    RewriteRule ^about-us/?$ / [R=301,L]
    RewriteRule ^aboutus/?$ / [R=301,L]

    # Redirect old contact pages to homepage (contact is on homepage)
    RewriteRule ^contact/?$ / [R=301,L]
    RewriteRule ^contact-us/?$ / [R=301,L]
    RewriteRule ^contactus/?$ / [R=301,L]

    # Redirect old portfolio/work pages to homepage (portfolio is on homepage)
    RewriteRule ^portfolio/?$ / [R=301,L]
    RewriteRule ^work/?$ / [R=301,L]
    RewriteRule ^projects/?$ / [R=301,L]
    RewriteRule ^project/?$ / [R=301,L]
    RewriteRule ^our-work/?$ / [R=301,L]
    RewriteRule ^ourwork/?$ / [R=301,L]

    # Redirect old testimonial pages to homepage (testimonials are on homepage)
    RewriteRule ^testimonials/?$ / [R=301,L]
    RewriteRule ^testimonial/?$ / [R=301,L]
    RewriteRule ^reviews/?$ / [R=301,L]
    RewriteRule ^review/?$ / [R=301,L]

    # Redirect old blog/news pages to homepage
    RewriteRule ^blog(/.*)?$ / [R=301,L]
    RewriteRule ^news(/.*)?$ / [R=301,L]
    RewriteRule ^article(/.*)?$ / [R=301,L]
    RewriteRule ^post(/.*)?$ / [R=301,L]

    # Redirect any other old pages or subdirectories to homepage
    # This catches any remaining old pages
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/index\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/privacy-policy\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/terms-of-service\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/404\.html$ [NC]
    RewriteCond %{REQUEST_URI} !^/assets/ [NC]
    RewriteCond %{REQUEST_URI} !^/\.well-known/ [NC]
    RewriteRule ^(.*)$ / [R=301,L]

    # Handle 404 errors
    ErrorDocument 404 /404.html
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Prevent directory browsing
Options -Indexes

# Protect sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|sql|yml)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

